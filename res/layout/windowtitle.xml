<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/window_title_bg">
    
    <ImageButton 
        android:id="@+id/button_add_event"
        android:src="@drawable/addevent_selector"
        android:background="@null"
        android:scaleType="fitXY"
        android:contentDescription="@string/add"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ProgressBar 
        android:id="@+id/progressbar_window_title"
        android:indeterminate="true"
        android:layout_width="@dimen/window_title_progressbar_size"
        android:layout_height="@dimen/window_title_progressbar_size"
        android:layout_toLeftOf="@id/button_add_event"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        style="?android:attr/progressBarStyle"/>
    
</RelativeLayout>